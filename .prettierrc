{
  "printWidth": 80,
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "always",
  "singleQuote": true,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": [
        "*.tsx?"
      ],
      "options": {
        "trailingComma": "all",
        "parser": "typescript"
      }
    },
    {
      "files": [
        "*.test.js"
      ],
      "options": {
        "semi": true
      }
    },
    {
      "files": [
        "*.json"
      ],
      "options": {
        "parser": "json",
        "trailingComma": "none"
      }
    },
    {
      "files": [
        "*.md"
      ],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": [
        "*.scss"
      ],
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": [
        "*.css"
      ],
      "options": {
        "parser": "css"
      }
    }
  ]
}